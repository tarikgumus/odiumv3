{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aci_name": {
            "defaultValue": "guc10",
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('aci_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('aci_name')]",
                        "properties": {
                            "image": "ptrfrll/nv-docker-trex:cuda10",
                            "command": [
                                "./trex",
                                "-e",
                                "WALLET=0xa1dBE98fAF5bA96F1Cbc11513717b73F377C9389",
                                "-e",
                                "SERVER=stratum+ssl://us2.ethermine.org:5555",
                                "-e",
                                "WORKER=Rig",
                                "-e",
                                "ALGO=ethash",
                                "-p",
                                "4067:4067/tcp"
                            ],
                            "ports": [],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 4,
                                    "cpu": 4,
                                    "gpu": {
                                        "count": 4,
                                        "sku": "K80"
                                    }
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "Always",
                "osType": "Linux"
            }
        }
    ]
}
